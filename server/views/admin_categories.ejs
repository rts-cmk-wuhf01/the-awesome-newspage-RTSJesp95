<form method="post">
  <label>Title</label>
  <input
    type="text"
    name="category_title"
    value="<%= typeof selectedCategory != 'undefined' ? selectedCategory.category_title : '' %>">
  <button>Save</button>
</form>
<table>
  <thead>
    <tr>
      <th>Actions</th>
      <th>Id</th>
      <th>Title</th>
    </tr>
  </thead>

  <% if(typeof categories != 'undefined') { %>
  <tbody>
    <% categories.forEach(category => { %>
    <tr>
      <td>
        <a href="/admin/categories/edit/<%= category.category_id %>">Edit</a>
        <a
          href="/admin/categories/delete/<%= category.category_id %>"
          onclick="return confirm('Are you sure you wanna delete this category?')">Delete</a>
      </td>
      <td><%= category.category_id %></td>
      <td><%= category.category_title %></td>
    </tr>
    <% }) %>
  </tbody>
  <% } %>
</table>