<h3>Latest Posts</h3>
<% if(typeof latestPosts != 'undefined') {%>
<% latestPosts.forEach(latestPost => {%>
<% let postDate = new Date(latestPost.article_postdate) %>
<!-- Single Featured Post Start -->
<div class="single-blog-post small-featured-post d-flex">
    <div class="post-thumb">
        <a href="#"><img src="category/img/bg-img/<%= latestPost.article_image %>" alt=""></a>
    </div>
    <div class="post-data">
        <a href="/category/<%= latestPost.category_id %>" class="post-catagory"><%= latestPost.category_title %></a>
        <div class="post-meta">
            <a href="#" class="post-title">
                <h6><%= latestPost.article_title %></h6>
            </a>
            <!-- <p class="post-date"><%= latestPost.article_postdate %></p> -->
            <p class="post-date"><%= dateAndTime.format(postDate, 'h:mm A | MMM DD | YYYY') %></p>
        </div>
    </div>
</div>
<%  })%>
<%  }%>